{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Graphyn Delivery Flow Schema",
  "description": "Schema for validating machine-readable flow definitions for Graphyn delivery processes",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "description": { "type": "string" },
        "author": { "type": "string" },
        "created": { "type": "string", "format": "date-time" },
        "total_steps": { "type": "integer", "minimum": 1 }
      },
      "required": ["name", "version", "total_steps"]
    },
    "segments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "pattern": "^[0-9]{3}-[0-9]{3}$" },
          "name": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["id", "name", "description"]
      }
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "minimum": 1, "maximum": 140 },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "segment": { "type": "string", "pattern": "^[0-9]{3}-[0-9]{3}$" },
          "inputs": {
            "type": "array",
            "items": { "type": "string" }
          },
          "preconditions": {
            "type": "array",
            "items": { "type": "string" }
          },
          "commands": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["shell", "mcp", "file", "api", "validate"] },
                "command": { "type": "string" },
                "args": {
                  "type": "object",
                  "additionalProperties": true
                }
              },
              "required": ["type", "command"]
            }
          },
          "validations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["file_exists", "process_running", "api_response", "database_query", "custom"] },
                "condition": { "type": "string" },
                "expected": { "type": "string" }
              },
              "required": ["type", "condition"]
            }
          },
          "artifacts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "path": { "type": "string" },
                "type": { "type": "string", "enum": ["file", "directory", "process", "database", "config"] },
                "description": { "type": "string" }
              },
              "required": ["name", "type"]
            }
          },
          "rollback": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["shell", "file", "process", "database"] },
                "command": { "type": "string" },
                "condition": { "type": "string" }
              },
              "required": ["type", "command"]
            }
          },
          "timeout": { "type": "integer", "minimum": 1 },
          "retries": { "type": "integer", "minimum": 0, "maximum": 10 },
          "concurrency_group": { "type": "string" },
          "idempotency_key": { "type": "string" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "file_module": { "type": "string" },
          "process_transparency": { "type": "string" },
          "doc_reference": { "type": "string" }
        },
        "required": ["id", "title", "description", "validations", "rollback", "timeout", "retries", "idempotency_key"]
      }
    }
  },
  "required": ["meta", "segments", "steps"]
}