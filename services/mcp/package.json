{
  "name": "@graphyn/mcp-server",
  "version": "0.1.70",
  "description": "Graphyn MCP Server - Model Context Protocol server with SQLite WAL2 for task coordination",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "graphyn-mcp": "dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "db:backup": "node dist/scripts/backup-db.js",
    "health": "node dist/scripts/health-check.js"
  },
  "dependencies": {
    "@graphyn/core": "workspace:*",
    "@graphyn/db": "workspace:*",
    "@modelcontextprotocol/sdk": "^0.6.0",
    "better-sqlite3": "^11.10.0",
    "ws": "^8.14.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "rimraf": "^6.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "mcp",
    "server",
    "orchestration",
    "graphyn",
    "sqlite",
    "wal2",
    "task-coordination"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
